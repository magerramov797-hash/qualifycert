---
import BaseLayout from "../../layouts/BaseLayout.astro";
const title = "Əlaqə";
const desc = "ISO sertifikatlaşdırma, audit və ya təlim üzrə sorğu göndərin. Cavab verək və iş planı ilə qiyməti paylaşaq.";
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker">Bizimlə əlaqə</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:860px;">
        Hansı standart/xidmət maraqlıdırsa yazın — detalları dəqiqləşdirək və iş planı,
        müddət və qiyməti göndərək.
      </p>

      <div class="grid" style="margin-top:22px;">
        <!-- Левая колонка -->
        <div class="card" style="grid-column: span 5;">
          <div style="font-weight:700; margin-bottom:10px;">Əlaqə məlumatları</div>

          <div style="display:grid; gap:10px;">
            <div>
              <div style="font-size:13px; color: var(--muted);">Telefon</div>
              <div style="font-weight:600;">+994 XX XXX XX XX</div>
            </div>

            <div>
              <div style="font-size:13px; color: var(--muted);">WhatsApp</div>
              <div style="font-weight:600;">+994 XX XXX XX XX</div>
            </div>

            <div>
              <div style="font-size:13px; color: var(--muted);">Email</div>
              <div style="font-weight:600;">info@qualifycert.com</div>
            </div>

            <div>
              <div style="font-size:13px; color: var(--muted);">Şəhər</div>
              <div style="font-weight:600;">Bakı, Azərbaycan</div>
            </div>
          </div>

          <div style="margin-top:18px; border-top:1px solid var(--line); padding-top:14px;">
            <div style="font-weight:700; margin-bottom:8px;">Nəyi soruşa bilərsiniz</div>
            <ul style="margin:0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
              <li>ISO hazırlıq planı və müddətlər</li>
              <li>Kommersiya təklifi</li>
              <li>Hazırlıq auditi (gap-analiz)</li>
              <li>Personal üçün təlim proqramı</li>
            </ul>
          </div>
        </div>

        <!-- Правая колонка -->
        <div class="card" style="grid-column: span 7;">
          <div style="font-weight:700; margin-bottom:10px;">Sorğu göndərin</div>

          <form method="post">
            <div class="grid">
              <div style="grid-column: span 6;">
                <label style="font-size:13px; color: var(--muted); display:block; margin-bottom:6px;">Ad</label>
                <input name="name" required
                  style="width:100%; padding:12px; border-radius:12px; border:1px solid var(--line); outline:none;"
                  placeholder="Adınız" />
              </div>

              <div style="grid-column: span 6;">
                <label style="font-size:13px; color: var(--muted); display:block; margin-bottom:6px;">Şirkət</label>
                <input name="company"
                  style="width:100%; padding:12px; border-radius:12px; border:1px solid var(--line); outline:none;"
                  placeholder="Şirkət adı" />
              </div>

              <div style="grid-column: span 6;">
                <label style="font-size:13px; color: var(--muted); display:block; margin-bottom:6px;">Telefon / WhatsApp</label>
                <input name="phone" required
                  style="width:100%; padding:12px; border-radius:12px; border:1px solid var(--line); outline:none;"
                  placeholder="+994..." />
              </div>

              <div style="grid-column: span 6;">
                <label style="font-size:13px; color: var(--muted); display:block; margin-bottom:6px;">Email</label>
                <input name="email" type="email"
                  style="width:100%; padding:12px; border-radius:12px; border:1px solid var(--line); outline:none;"
                  placeholder="email@company.com" />
              </div>

              <div style="grid-column: span 12;">
                <label style="font-size:13px; color: var(--muted); display:block; margin-bottom:6px;">Maraqlıdır</label>
                <select name="topic"
                  style="width:100%; padding:12px; border-radius:12px; border:1px solid var(--line); outline:none; background:#fff;">
                  <option>ISO sertifikatlaşdırma</option>
                  <option>Audit</option>
                  <option>Təlim</option>
                  <option>ISO 9001</option>
                  <option>ISO 14001</option>
                  <option>ISO 45001</option>
                  <option>ISO 22000 / HACCP</option>
                </select>
              </div>

              <div style="grid-column: span 12;">
                <label style="font-size:13px; color: var(--muted); display:block; margin-bottom:6px;">Mesaj</label>
                <textarea name="message" rows="5"
                  style="width:100%; padding:12px; border-radius:12px; border:1px solid var(--line); outline:none; resize:vertical;"
                  placeholder="Qısa təsvir: sahə, işçi sayı, müddətlər..."></textarea>
              </div>
            </div>

            <div style="display:flex; gap:12px; margin-top:14px; flex-wrap:wrap;">
              <button class="btn primary" type="submit">Sorğunu göndər</button>
              <a class="btn" href="/services/">Xidmətlərə baxın</a>
            </div>

            <p class="p" style="font-size:13px; margin-top:12px;">
              “Sorğunu göndər” düyməsini basmaqla şəxsi məlumatların emalına razılıq verirsiniz.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
