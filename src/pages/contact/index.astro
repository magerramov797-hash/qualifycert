---
import BaseLayout from "../../layouts/BaseLayout.astro";
const title = "Əlaqə";
const desc =
  "ISO sertifikatlaşdırma, audit və ya təlim üzrə sorğu göndərin. Cavab verək və iş planı ilə qiyməti paylaşaq.";
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker">Bizimlə əlaqə</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:860px;">
        Hansı standart/xidmət maraqlıdırsa yazın — detalları dəqiqləşdirək və iş planı,
        müddət və qiyməti göndərək.
      </p>

      <!-- Layout: left info + right form (responsive without breaking) -->
      <div class="grid contact-layout" style="margin-top:22px;">
        <!-- Left -->
        <div class="card contact-left">
          <div style="font-weight:700; margin-bottom:10px;">Əlaqə məlumatları</div>

          <div style="display:grid; gap:10px;">
            <div>
              <div style="font-size:13px; color: var(--muted);">Telefon</div>
              <div style="font-weight:600;">+994 70 857 28 17</div>
            </div>

            <div>
              <div style="font-size:13px; color: var(--muted);">WhatsApp</div>
              <div style="font-weight:600;">+994 70 857 28 17</div>
            </div>

            <div>
              <div style="font-size:13px; color: var(--muted);">Email</div>
              <div style="font-weight:600;">info@qualifycert.com</div>
            </div>

            <div>
              <div style="font-size:13px; color: var(--muted);">Şəhər</div>
              <div style="font-weight:600;">Bakı, Azərbaycan</div>
            </div>
          </div>

          <div style="margin-top:18px; border-top:1px solid var(--line); padding-top:14px;">
            <div style="font-weight:700; margin-bottom:8px;">Nəyi soruşa bilərsiniz</div>
            <ul class="p contact-list">
              <li>ISO hazırlıq planı və müddətlər</li>
              <li>Kommersiya təklifi</li>
              <li>Hazırlıq auditi (gap-analiz)</li>
              <li>Personal üçün təlim proqramı</li>
            </ul>
          </div>

          <div class="grid grid-auto" style="margin-top:14px; justify-items:center;">
            <a class="btn" href="mailto:info@qualifycert.com" style="width:100%;">E-poçtla yazın</a>
            <a class="btn" href="tel:+994708572817" style="width:100%;">Zəng edin</a>
          </div>
        </div>

        <!-- Right -->
        <div class="card contact-right">
          <div style="font-weight:700; margin-bottom:10px;">Sorğu göndərin</div>

          <form method="post">
            <!-- Form fields: auto grid (2 columns when possible) -->
            <div class="grid grid-auto form-grid">
              <div>
                <label class="field-label" for="name">Ad</label>
                <input id="name" name="name" required class="field" placeholder="Adınız" />
              </div>

              <div>
                <label class="field-label" for="company">Şirkət</label>
                <input id="company" name="company" class="field" placeholder="Şirkət adı" />
              </div>

              <div>
                <label class="field-label" for="phone">Telefon / WhatsApp</label>
                <input id="phone" name="phone" required class="field" placeholder="+994..." />
              </div>

              <div>
                <label class="field-label" for="email">Email</label>
                <input id="email" name="email" type="email" class="field" placeholder="email@company.com" />
              </div>

              <div class="span-2">
                <label class="field-label" for="topic">Maraqlıdır</label>
                <select id="topic" name="topic" class="field field-select">
                  <option>ISO sertifikatlaşdırma</option>
                  <option>Audit</option>
                  <option>Təlim</option>
                  <option>ISO 9001</option>
                  <option>ISO 14001</option>
                  <option>ISO 45001</option>
                  <option>ISO 22000 / HACCP</option>
                </select>
              </div>

              <div class="span-2">
                <label class="field-label" for="message">Mesaj</label>
                <textarea
                  id="message"
                  name="message"
                  rows="5"
                  class="field"
                  style="resize:vertical;"
                  placeholder="Qısa təsvir: sahə, işçi sayı, müddətlər..."
                ></textarea>
              </div>
            </div>

            <!-- Actions -->
            <div class="grid grid-auto" style="margin-top:14px; justify-items:center; max-width:520px;">
              <button class="btn primary" type="submit" style="width:100%;">Sorğunu göndər</button>
              <a class="btn" href="/services/" style="width:100%;">Xidmətlərə baxın</a>
            </div>

            <p class="p" style="font-size:13px; margin-top:12px;">
              “Sorğunu göndər” düyməsini basmaqla şəxsi məlumatların emalına razılıq verirsiniz.
            </p>
          </form>
        </div>
      </div>
    </div>
  </section>

  <style is:global>
    /* Layout (left + right) */
    .contact-layout{
      grid-template-columns: repeat(12, minmax(0, 1fr));
      gap: 18px;
    }
    .contact-left{ grid-column: span 5; }
    .contact-right{ grid-column: span 7; }

    @media (max-width: 900px){
      .contact-left,
      .contact-right{
        grid-column: 1 / -1;
      }
    }

    /* Lists */
    .contact-list{
      margin: 0;
      padding-left: 18px;
      display: grid;
      gap: 6px;
      color: var(--muted);
    }

    /* Form fields */
    .form-grid{
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 14px;
      margin-top: 10px;
    }

    /* Full width blocks inside auto grid */
    .span-2{
      grid-column: 1 / -1;
    }

    .field-label{
      font-size: 13px;
      color: var(--muted);
      display: block;
      margin-bottom: 6px;
    }

    .field{
      width: 100%;
      padding: 12px;
      border-radius: 12px;
      border: 1px solid var(--line);
      outline: none;
      background: #fff;
      color: var(--text);
    }

    .field:focus{
      border-color: rgba(37,99,235,.35);
      box-shadow: 0 0 0 3px rgba(37,99,235,.12);
    }

    .field-select{
      appearance: none;
    }
  </style>
</BaseLayout>
