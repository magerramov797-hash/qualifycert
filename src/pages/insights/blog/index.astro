---
import BaseLayout from "../../../layouts/BaseLayout.astro";
const title = "Məqalələr";
const desc = "ISO üzrə faydalı materiallar: standartların izahı, auditə hazırlıq, чек-листlər və praktik tövsiyələr.";

const posts = [
  {
    title: "ISO 9001: tətbiqə haradan başlamaq",
    tag: "ISO 9001",
    excerpt: "Addım-addım yanaşma: diaqnostika, proseslər, KPI, risklər, sənədləşmə və daxili audit.",
  },
  {
    title: "ISO 45001: əməyin mühafizəsində tipik səhvlər",
    tag: "ISO 45001",
    excerpt: "Ən çox rast gəlinən boşluqlar: risklər, təlim, araşdırmalar, qeydlər və podratçıların nəzarəti.",
  },
  {
    title: "ISO 22000 vs HACCP: fərq nədədir",
    tag: "Food Safety",
    excerpt: "PRP/OPRP/CCP necə bağlıdır və ISO 22000 niyə HACCP planından daha genişdir.",
  },
];
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker"><a href="/insights/">Ekspertiza</a> • Bloq</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:900px;">
        Burada ISO üzrə materiallar olacaq: tələbləri anlamaq və auditə hazırlaşmaq üçün.
        Növbəti mərhələdə məqalələri Markdown-dan yükləyəcəyik ki, asanlıqla yeniləyəsiniz.
      </p>

      <div class="grid" style="margin-top:22px;">
        {posts.map((p) => (
          <div class="card" style="grid-column: span 4;">
            <div style="display:flex; justify-content:space-between; gap:10px; align-items:flex-start;">
              <div style="font-weight:900; line-height:1.2;">{p.title}</div>
              <span class="kicker" style="white-space:nowrap;">{p.tag}</span>
            </div>
            <p class="p" style="margin-top:10px;">{p.excerpt}</p>

            <div style="margin-top:14px;">
              <a class="btn" href="/contact/">Sual verin</a>
            </div>
          </div>
        ))}
      </div>

      <div style="margin-top:18px;">
        <a class="btn" href="/insights/">← Bölməyə qayıt</a>
      </div>
    </div>
  </section>
</BaseLayout>
