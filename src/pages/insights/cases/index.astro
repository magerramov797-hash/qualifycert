---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const title = "Keyslər";
const desc =
  "Layihə nümunələri: ISO tətbiqi, hazırıq auditi, personal təlimi və sertifikatlaşmaya hazırlıq.";

const caseItems = [
  {
    title: "ISO 9001: keyfiyyət sisteminin tətbiqi",
    industry: "İstehsalat",
    result: "Proseslər təsvir edildi, KPI-lar razılaşdırıldı, daxili audit keçirildi.",
  },
  {
    title: "ISO 45001: əməyin mühafizəsi və təhlükəsizlik",
    industry: "Tikinti",
    result: "Risk matrisi, təlimlər, araşdırmalar, CAPA və podratçı nəzarəti quruldu.",
  },
  {
    title: "ISO 22000 / HACCP: qida təhlükəsizliyi",
    industry: "Qida sənayesi",
    result: "PRP, HACCP planı, monitorinq qeydləri, müştəri auditinə hazırıq.",
  },
  {
    title: "Sertifikasiya öncəsi daxili audit (gap-analiz)",
    industry: "Logistika / anbar",
    result: "Uyğunsuzluqlar müəyyənləşdirildi, düzəldici tədbirlər planı hazırlandı, təkrar yoxlama aparıldı.",
  },
  {
    title: "Daxili auditorların təlimi",
    industry: "Xidmətlər",
    result: "Auditor komandası hazırlandı, çek-listlər formalaşdırıldı, pilot audit keçirildi.",
  },
  {
    title: "Inteqrə olunmuş sistem (ISO 9001 + 14001 + 45001)",
    industry: "İstehsalat",
    result: "Vahid sənədlər paketi, ortaq prosedurlar, vahid audit planı və KPI-lar.",
  },
];
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker">Praktika və nəticə</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:900px;">
        Aşağıda iş formatı və tipik nəticələrin nümunələri var. Sonradan real layihələr və rəqəmlərlə yenilənəcək.
      </p>

      <div class="grid" style="margin-top:22px;">
        {caseItems.map((c) => (
          <div class="card" style="grid-column: span 4;">
            <div style="display:flex; justify-content:space-between; gap:10px; align-items:flex-start;">
              <div style="font-weight:800; line-height:1.2;">{c.title}</div>
              <span class="kicker" style="white-space:nowrap;">{c.industry}</span>
            </div>

            <p class="p" style="margin-top:10px;">{c.result}</p>

            <div style="margin-top:14px;">
              <a class="btn" href="/contact/">Oxşar layihə istəyin</a>
            </div>
          </div>
        ))}
      </div>

      <div class="card" style="margin-top:18px;">
        <div style="font-weight:800;">Tapşırığınız üçün keys istəyirsiniz?</div>
        <p class="p" style="max-width:900px; margin-top:10px;">
          Sahə, standartlar və müddətləri yazın — iş planı və qiyməti hazırlayaq.
        </p>
        <div style="margin-top:14px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/contact/">Plan və qiymət alın</a>
          <a class="btn" href="/services/">Xidmətlərə baxın</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
