---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Standartlar";
const desc =
  "ISO 9001, ISO 14001, ISO 45001, ISO 22000 və HACCP: uyğunluq, faydalar və hazırlıq prosesi.";

const standards = [
  {
    title: "ISO 9001",
    tag: "Quality",
    desc: "Keyfiyyət idarəetməsi: proseslər, KPI, risklər, uyğunsuzluqlar və yaxşılaşdırmalar.",
    href: "/standards/iso-9001/",
  },
  {
    title: "ISO 14001",
    tag: "Environment",
    desc: "Ekologiya: aspektlər və təsirlər, tələblərə uyğunluq, məqsəd və proqramlar.",
    href: "/standards/iso-14001/",
  },
  {
    title: "ISO 45001",
    tag: "OH&S",
    desc: "Əməyin mühafizəsi: təhlükələr, risklərin qiymətləndirilməsi, təlim, araşdırma, nəzarət.",
    href: "/standards/iso-45001/",
  },
  {
    title: "ISO 22000",
    tag: "Food Safety",
    desc: "Qida təhlükəsizliyi: PRP, təhlükə analizi, OPRP/CCP, risklərin idarə edilməsi.",
    href: "/standards/iso-22000/",
  },
  {
    title: "HACCP",
    tag: "Food Safety",
    desc: "HACCP planı: CCP, monitorinq, düzəldici tədbirlər, qeydlər və verifikasiya.",
    href: "/standards/haccp/",
  },
  {
    title: "Inteqrə olunmuş sistem",
    tag: "IMS",
    desc: "ISO 9001 + 14001 + 45001 — vahid sənəd paketi və proseslər.",
    href: "/services/certification/",
  },
];

const why = [
  { title: "Bazar etibarı", desc: "Tenderlərdən keçmək və müştəri tələblərinə uyğunluq artır." },
  { title: "Proses nizamı", desc: "Aydın rollar, prosedurlar və nəzarət." },
  { title: "Az risk", desc: "İnsidentlərin, itkilərin və qüsurların azalması." },
  { title: "Auditə hazırıq", desc: "Qeydlər, sübutlar və daxili yoxlama." },
];
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker">ISO • Compliance</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:940px;">
        Sahənizə və məqsədinizə uyğun standartları seçməyə kömək edirik, sənədləşməni hazırlayırıq,
        personalı öyrədir və daxili audit keçiririk — sertifikasiyadan inamla keçəsiniz.
      </p>

      <div style="display:flex; gap:12px; margin-top:18px; flex-wrap:wrap;">
        <a class="btn primary" href="/contact/">Standart seçin</a>
        <a class="btn" href="/services/">Xidmətlərə baxın</a>
      </div>

      <div class="grid" style="margin-top:22px;">
        {standards.map((s) => (
          <a class="card" href={s.href} style="grid-column: span 4;">
            <div style="display:flex; justify-content:space-between; gap:10px; align-items:flex-start;">
              <div style="font-weight:900; line-height:1.2;">{s.title}</div>
              <span class="kicker" style="white-space:nowrap;">{s.tag}</span>
            </div>
            <p class="p" style="margin-top:10px;">{s.desc}</p>
            <div style="margin-top:14px; font-weight:700;">Ətraflı →</div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:900;">Niyə ISO lazımdır</div>
        <div class="grid" style="margin-top:12px;">
          {why.map((x) => (
            <div class="card" style="grid-column: span 3;">
              <div style="font-weight:800;">{x.title}</div>
              <div class="p" style="margin-top:8px;">{x.desc}</div>
            </div>
          ))}
        </div>

        <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/services/certification/">Sertifikatlaşmaya hazırlıq</a>
          <a class="btn" href="/services/audit/">Hazırlıq auditi lazımdır</a>
          <a class="btn" href="/training/">Təlim</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
