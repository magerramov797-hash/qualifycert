---
import BaseLayout from "../../../layouts/BaseLayout.astro";
const title = "Contact";
const desc =
  "Send an inquiry about ISO certification, audits, or training. We’ll reply with a project plan and pricing.";
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker">Get in touch</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:860px;">
        Tell us which standard/service you’re interested in — we’ll уточним details and share the work plan,
        timeline, and pricing.
      </p>

      <!-- Layout: left info + right form (responsive without breaking) -->
      <div class="grid contact-layout" style="margin-top:22px;">
        <!-- Left -->
        <div class="card contact-left">
          <div style="font-weight:700; margin-bottom:10px;">Contact details</div>

          <div style="display:grid; gap:10px;">
              <div>
              <div style="font-size:13px; color: var(--muted);">Phone/WhatsApp</div>
              <div style="font-weight:600;">+994 10 725 64 41</div>
            </div>

            <div>
              <div style="font-size:13px; color: var(--muted);">Email</div>
              <div style="font-weight:600;">info@qualifycert.com</div>
            </div>

            <div>
              <div style="font-size:13px; color: var(--muted);">City</div>
              <div style="font-weight:600;">Baku, Azerbaijan</div>
            </div>
          </div>

          <div style="margin-top:18px; border-top:1px solid var(--line); padding-top:14px;">
            <div style="font-weight:700; margin-bottom:8px;">What you can ask</div>
            <ul class="p contact-list">
              <li>ISO preparation plan and timelines</li>
              <li>Commercial proposal</li>
              <li>Readiness audit (gap analysis)</li>
              <li>Staff training program</li>
            </ul>
          </div>

          <div class="grid grid-auto" style="margin-top:14px; justify-items:center;">
            <a class="btn" href="mailto:info@qualifycert.com" style="width:100%;">Email us</a>
            <a class="btn" href="tel:+994107256441" style="width:100%;">Call us</a>
          </div>
        </div>

        <!-- Right -->
        <div class="card contact-right">
          <div style="font-weight:700; margin-bottom:10px;">Send an inquiry</div>

          <form 
  action="https://formspree.io/f/maqdezen" 
  method="POST"
>
  <!-- Hidden config -->
  <input type="hidden" name="_subject" value="New inquiry — qualifycert.com" />
  <input type="hidden" name="_captcha" value="false" />
  <input type="hidden" name="_next" value="https://qualifycert.com/en/contact/?success=true" />

  <!-- Honeypot anti-spam -->
  <input type="text" name="_gotcha" style="display:none" />

  <div class="grid grid-auto form-grid">
    <div>
      <label class="field-label" for="name">Full Name</label>
      <input id="name" name="name" required class="field" placeholder="Your name" />
    </div>

    <div>
      <label class="field-label" for="company">Company</label>
      <input id="company" name="company" class="field" placeholder="Company name" />
    </div>

    <div>
      <label class="field-label" for="phone">Phone / WhatsApp</label>
      <input id="phone" name="phone" required class="field" placeholder="+994..." />
    </div>

    <div>
      <label class="field-label" for="email">Email</label>
      <input id="email" name="email" type="email" class="field" placeholder="email@company.com" />
    </div>

    <div class="span-2">
      <label class="field-label" for="topic">Interested in</label>
      <select id="topic" name="topic" class="field field-select">
        <option>ISO Certification</option>
        <option>Audit</option>
        <option>Training</option>
        <option>ISO 9001</option>
        <option>ISO 14001</option>
        <option>ISO 45001</option>
        <option>ISO 22000 / HACCP</option>
      </select>
    </div>

    <div class="span-2">
      <label class="field-label" for="message">Message</label>
      <textarea
        id="message"
        name="message"
        rows="5"
        class="field"
        style="resize:vertical;"
        placeholder="Short description: industry, number of employees, timeline..."
      ></textarea>
    </div>
  </div>

  <div class="grid grid-auto" style="margin-top:14px; justify-items:center; max-width:520px;">
    <button class="btn primary" type="submit" style="width:100%;">
      Send Request
    </button>
    <a class="btn" href="/en/services/" style="width:100%;">
      View Services
    </a>
  </div>

  <p class="p" style="font-size:13px; margin-top:12px;">
    By clicking the button, you agree to the processing of personal data.
  </p>
</form>

        </div>
      </div>
    </div>
  </section>

  <style is:global>
    /* Layout (left + right) */
    .contact-layout{
      grid-template-columns: repeat(12, minmax(0, 1fr));
      gap: 18px;
    }
    .contact-left{ grid-column: span 5; }
    .contact-right{ grid-column: span 7; }

    @media (max-width: 900px){
      .contact-left,
      .contact-right{
        grid-column: 1 / -1;
      }
    }

    /* Lists */
    .contact-list{
      margin: 0;
      padding-left: 18px;
      display: grid;
      gap: 6px;
      color: var(--muted);
    }

    /* Form fields */
    .form-grid{
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 14px;
      margin-top: 10px;
    }

    /* Full width blocks inside auto grid */
    .span-2{
      grid-column: 1 / -1;
    }

    .field-label{
      font-size: 13px;
      color: var(--muted);
      display: block;
      margin-bottom: 6px;
    }

    .field{
      width: 100%;
      padding: 12px;
      border-radius: 12px;
      border: 1px solid var(--line);
      outline: none;
      background: #fff;
      color: var(--text);
    }

    .field:focus{
      border-color: rgba(37,99,235,.35);
      box-shadow: 0 0 0 3px rgba(37,99,235,.12);
    }

    .field-select{
      appearance: none;
    }
  </style>
</BaseLayout>
