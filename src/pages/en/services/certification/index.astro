---
import BaseLayout from "../../../../layouts/BaseLayout.astro";

const title = "ISO Certification";
const desc =
  "Preparation for ISO 9001, ISO 14001, ISO 45001, ISO 22000, and HACCP: diagnostics, implementation, training, internal audit, and certification readiness.";

const standards = [
  { title: "ISO 9001", desc: "Quality: processes, KPIs, nonconformity management, and improvement." },
  { title: "ISO 14001", desc: "Environment: aspects/impacts, legal requirements, objectives, and programs." },
  { title: "ISO 45001", desc: "OH&S: hazards, risks, training, investigations, and operational control." },
  { title: "ISO 22000", desc: "Food safety: PRPs, hazard analysis, OPRPs/CCPs." },
  { title: "HACCP", desc: "HACCP plan: CCPs, monitoring, corrective actions, and records." },
  { title: "Integrated Management System", desc: "ISO 9001 + 14001 + 45001 — one set of documents and processes." },
];
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker">Services</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:920px;">
        We prepare your company for certification in a practical way: a clear plan,
        tailored documentation, training, internal audit, and readiness for external assessment.
      </p>

      <div style="display:flex; gap:12px; margin-top:18px; flex-wrap:wrap;">
        <a class="btn primary" href="/en/contact/">Request pricing</a>
        <a class="btn" href="/en/standards/">Choose a standard</a>
      </div>

      <div class="grid grid-auto" style="margin-top:22px;">
        {standards.map((s) => (
          <div class="card">
            <div style="font-weight:800;">{s.title}</div>
            <div class="p">{s.desc}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:800; margin-bottom:10px;">How the work goes</div>

        <div class="grid grid-auto">
          <div>
            <div style="font-weight:700;">1) Diagnostics</div>
            <div class="p">Gap analysis, context, processes, risks, and requirements.</div>
          </div>
          <div>
            <div style="font-weight:700;">2) Plan</div>
            <div class="p">Timeline, responsibilities, documentation, and action list.</div>
          </div>
          <div>
            <div style="font-weight:700;">3) Implementation</div>
            <div class="p">Policies, procedures, records, and staff training.</div>
          </div>
          <div>
            <div style="font-weight:700;">4) Verification</div>
            <div class="p">Internal audit, CAPA, and certification readiness.</div>
          </div>
        </div>

        <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/en/contact/">Get a plan & quote</a>
          <a class="btn" href="/en/services/audit/">Need a readiness audit</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="grid grid-auto">
        <div class="card">
          <div style="font-weight:800;">What’s included</div>
          <ul class="p" style="margin:10px 0 0; padding-left:18px; display:grid; gap:6px;">
            <li>Project plan and schedule</li>
            <li>Company-tailored documentation package</li>
            <li>Training for staff and responsible roles</li>
            <li>Internal audit execution</li>
            <li>CAPA plan (corrective actions)</li>
          </ul>
        </div>

        <div class="card">
          <div style="font-weight:800;">What information we need</div>
          <ul class="p" style="margin:10px 0 0; padding-left:18px; display:grid; gap:6px;">
            <li>Industry and scope of activities</li>
            <li>Headcount and number of sites</li>
            <li>Existing processes/documents (if any)</li>
            <li>Preferred timeline and target standards</li>
            <li>Contact person</li>
          </ul>
        </div>
      </div>

      <div class="card" style="margin-top:18px;">
        <div style="font-weight:800;">Ready to start?</div>
        <p class="p" style="margin-top:10px; max-width:900px;">
          Send a request — we’ll confirm the details and share the work plan and pricing.
        </p>
        <div style="margin-top:14px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/en/contact/">Send a request</a>
          <a class="btn" href="/en/services/">All services</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
