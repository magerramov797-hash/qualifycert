---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const title = "Services";
const desc =
  "ISO certification, audits, and training: diagnostics, implementation, internal audits, and certification readiness.";

const services = [
  {
    title: "ISO Certification",
    desc: "Preparation for ISO 9001, 14001, 45001, 22000, and HACCP. Implementation, training, internal audits, and certification readiness.",
    href: "/en/services/certification/",
    tag: "Core service",
  },
  {
    title: "Audit",
    desc: "Gap analysis, internal audits, and pre-certification readiness checks. Reporting, nonconformities, and a CAPA plan.",
    href: "/en/services/audit/",
    tag: "Assessment & improvement",
  },
  {
    title: "Training",
    desc: "Training for staff and internal auditors: ISO requirements, hands-on practice, checklists, and real scenarios.",
    href: "/en/services/training/",
    tag: "Practical",
  },
];
---

<BaseLayout title={title} description={desc}>
  <!-- Hero -->
  <section class="section">
    <div class="container">
      <div class="kicker">ISO • Audit • Training</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:920px;">
        We build management systems that actually work — with clear processes,
        responsibilities, documentation, training, and verification through internal audits.
      </p>

      <div style="display:flex; gap:12px; margin-top:18px; flex-wrap:wrap;">
        <a class="btn primary" href="/en/contact/">Request a quotation</a>
        <a class="btn" href="/en/standards/">Choose a standard</a>
      </div>

      <!-- 3 service cards -->
      <div class="grid grid-auto" style="margin-top:22px;">
        {services.map((s) => (
          <a class="card" href={s.href}>
            <div style="display:flex; justify-content:space-between; gap:12px; align-items:flex-start;">
              <div style="font-weight:800; line-height:1.2;">{s.title}</div>
              <span class="kicker">{s.tag}</span>
            </div>
            <p class="p" style="margin-top:10px;">{s.desc}</p>
            <div style="margin-top:14px; font-weight:700;">Learn more →</div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- How we work -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:800; margin-bottom:10px;">How we work</div>

        <div class="grid grid-auto">
          <div>
            <div style="font-weight:700;">1) Diagnostics</div>
            <div class="p">Gap analysis, context, risks, requirements, and processes.</div>
          </div>

          <div>
            <div style="font-weight:700;">2) Plan</div>
            <div class="p">Stages, timelines, responsibilities, and the documentation list.</div>
          </div>

          <div>
            <div style="font-weight:700;">3) Implementation</div>
            <div class="p">Documentation, training, and rollout of procedures and records.</div>
          </div>

          <div>
            <div style="font-weight:700;">4) Verification</div>
            <div class="p">Internal audit, CAPA, and readiness for certification.</div>
          </div>
        </div>

        <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/en/contact/">Request a plan & price</a>
        </div>
      </div>
    </div>
  </section>

  <!-- What we need / What you get -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="grid grid-auto">
        <div class="card">
          <div style="font-weight:800;">What we need from you</div>
          <ul class="p" style="margin:10px 0 0; padding-left:18px; display:grid; gap:6px;">
            <li>Industry and scope of activities</li>
            <li>Number of employees and sites</li>
            <li>Required standards (or project goal)</li>
            <li>Preferred timeline</li>
            <li>Contact person</li>
          </ul>
        </div>

        <div class="card">
          <div style="font-weight:800;">What you will get</div>
          <ul class="p" style="margin:10px 0 0; padding-left:18px; display:grid; gap:6px;">
            <li>Work plan and roadmap</li>
            <li>Company-tailored documentation package</li>
            <li>Staff training</li>
            <li>Internal audit and report</li>
            <li>CAPA (corrective actions) and recommendations</li>
          </ul>
        </div>
      </div>

      <div class="card" style="margin-top:18px;">
        <div style="font-weight:800;">Not sure what to choose?</div>
        <p class="p" style="margin-top:10px; max-width:900px;">
          Tell us your industry and goal — we’ll recommend the right standard/service and send a work plan.
        </p>
        <div style="margin-top:14px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/en/contact/">Get a consultation</a>
          <a class="btn" href="/en/standards/">View standards</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
