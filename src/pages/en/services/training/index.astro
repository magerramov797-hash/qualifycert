---
import BaseLayout from "../../../../layouts/BaseLayout.astro";

const title = "Training";
const desc =
  "ISO training programs for leadership, process owners, and internal auditors — modules and outcomes.";

const programs = [
  {
    title: "ISO Awareness (for staff)",
    tag: "1–2 hours",
    forWho: "Employees / office / production",
    points: [
      "What ISO is and why it matters",
      "Your role in the system (processes, records, discipline)",
      "Typical audit mistakes",
      "Mini audit checklist",
    ],
  },
  {
    title: "ISO Implementation (for system owners)",
    tag: "1–2 days",
    forWho: "ISO owners / quality managers / HSE",
    points: [
      "Context, interested parties, risks, and objectives",
      "Processes and KPIs, documentation and records",
      "Nonconformity management, CAPA, and improvement",
      "Certification readiness: plan, control, evidence",
    ],
  },
  {
    title: "Internal Auditor",
    tag: "2 days",
    forWho: "Internal auditors / department heads",
    points: [
      "Audit principles, planning, and checklists",
      "Interviewing and evidence collection",
      "Nonconformity grading and reporting",
      "CAPA and effectiveness verification",
    ],
  },
];

const formats = [
  { title: "On-site", desc: "Delivered at your site and tailored to your processes and risks." },
  { title: "Online", desc: "Zoom/Teams — convenient for distributed teams." },
  { title: "Blended", desc: "Theory online + practical session/audit on-site." },
  { title: "1:1 format", desc: "Short and focused sessions for leadership or a responsible person." },
];

const whatYouGet = [
  "Training program tailored to your industry and standard",
  "Materials: slides, templates, document examples",
  "Checklists (audit/self-check/certification readiness)",
  "Practical cases and mistake analysis",
  "Implementation guidance and next steps",
];
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker">Training • ISO</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:940px;">
        Practical ISO training for staff, system owners, and internal auditors.
        Simple and useful: examples, checklists, cases, and real scenarios.
      </p>

      <div style="display:flex; gap:12px; margin-top:18px; flex-wrap:wrap;">
        <a class="btn primary" href="/en/contact/">Request program & pricing</a>
        <a class="btn" href="/en/services/certification/">Need ISO implementation</a>
      </div>

      <div class="grid grid-auto" style="margin-top:22px;">
        <div class="card">
          <div style="font-weight:900;">Clear outcome</div>
          <div class="p">After training, the team understands requirements and roles. Fewer audit mistakes.</div>
        </div>
        <div class="card">
          <div style="font-weight:900;">Practical</div>
          <div class="p">Checklists, interview scenarios, nonconformity examples, and CAPA.</div>
        </div>
        <div class="card">
          <div style="font-weight:900;">Tailored to your industry</div>
          <div class="p">We adapt materials to your processes: manufacturing, construction, food, services.</div>
        </div>
      </div>
    </div>
  </section>

  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:900; font-size:18px;">Training programs</div>
        <p class="p" style="margin-top:10px; max-width:940px;">
          Choose the format for your role. If needed, we build a combined program aligned to your standard.
        </p>

        <div class="grid grid-auto" style="margin-top:16px;">
          {programs.map((p) => (
            <div class="card">
              <div style="display:flex; justify-content:space-between; gap:10px; align-items:flex-start;">
                <div style="font-weight:900; line-height:1.2;">{p.title}</div>
                <span class="kicker" style="white-space:nowrap;">{p.tag}</span>
              </div>
              <div class="p" style="margin-top:8px;">For: {p.forWho}</div>
              <ul style="margin:10px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
                {p.points.map((x) => <li>{x}</li>)}
              </ul>
            </div>
          ))}
        </div>

        <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/en/contact/">Get program (PDF) & pricing</a>
          <a class="btn" href="/en/faq/">View FAQ</a>
        </div>
      </div>
    </div>
  </section>

  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="grid grid-auto">
        <div class="card">
          <div style="font-weight:900;">Formats</div>
          <div class="grid grid-auto" style="margin-top:12px;">
            {formats.map((f) => (
              <div class="card">
                <div style="font-weight:800;">{f.title}</div>
                <div class="p" style="margin-top:8px;">{f.desc}</div>
              </div>
            ))}
          </div>
        </div>

        <div class="card">
          <div style="font-weight:900;">What you get</div>
          <ul style="margin:12px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
            {whatYouGet.map((x) => <li>{x}</li>)}
          </ul>

          <div style="margin-top:14px; border-top:1px solid var(--line); padding-top:12px;">
            <div style="font-weight:800;">Quick estimate</div>
            <div class="p" style="margin-top:8px;">
              For pricing: topic/standard, number of participants, format (on-site/online), and dates are needed.
            </div>
            <div style="margin-top:12px;">
              <a class="btn primary" href="/en/contact/">Request pricing</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:900;">Need training + readiness audit?</div>
        <p class="p" style="margin-top:10px; max-width:940px;">
          Often the best format is a short training plus an internal audit — the team reinforces knowledge in practice.
        </p>
        <div style="margin-top:14px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/en/contact/">Tailor the program to us</a>
          <a class="btn" href="/en/services/audit/">View audit</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
