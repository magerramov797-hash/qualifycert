---
import BaseLayout from "../../../../layouts/BaseLayout.astro";

const title = "Audit";
const desc =
  "ISO internal audits, gap analysis, and pre-certification readiness audits: report, nonconformities, CAPA, and improvement plan.";

const auditTypes = [
  {
    title: "Gap Analysis (Audit Readiness)",
    tag: "1–3 days",
    points: [
      "Compare the current state against ISO requirements",
      "List of gaps, nonconformities, and risks",
      "Work plan to close the gaps",
      "Priorities and quick wins",
    ],
  },
  {
    title: "ISO Internal Audit",
    tag: "as planned",
    points: [
      "Audit plan and audit program",
      "Interviews, sampling of records, observations",
      "Evidence-based audit report",
      "Findings/nonconformities + CAPA",
    ],
  },
  {
    title: "Pre-certification Audit",
    tag: "before external audit",
    points: [
      "80–90% readiness check",
      "Records and practical implementation review",
      "Prepare staff for interviews",
      "Final readiness checklist",
    ],
  },
];

const deliverables = [
  "Audit report (structured and clear)",
  "List of findings: nonconformities and observations",
  "CAPA plan (owners and due dates)",
  "Improvement recommendations",
  "If needed — templates/checklists",
];

const inputs = [
  "Which standard(s): ISO 9001 / 14001 / 45001 / 22000 / HACCP",
  "Industry and key processes (brief)",
  "Number of sites/locations",
  "Headcount (approx.)",
  "Preferred timeline and format (on-site/online)",
];
---

<BaseLayout title={title} description={desc}>
  <!-- HERO -->
  <section class="section">
    <div class="container">
      <div class="kicker">Audit • ISO</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:940px;">
        An audit shows the real picture: what works, what doesn’t, and what blocks certification.
        We don’t “criticize for the sake of criticism” — we deliver a clear action plan: findings, risks, CAPA, and priorities.
      </p>

      <div style="display:flex; gap:12px; margin-top:18px; flex-wrap:wrap;">
        <a class="btn primary" href="/en/contact/">Request an audit</a>
        <a class="btn" href="/en/services/certification/">Need ISO implementation</a>
      </div>

      <div class="grid grid-auto" style="margin-top:22px;">
        <div class="card">
          <div style="font-weight:900;">Clear reporting</div>
          <div class="p">Facts, evidence, findings, and recommendations — concise and actionable.</div>
        </div>
        <div class="card">
          <div style="font-weight:900;">CAPA plan</div>
          <div class="p">Concrete actions, deadlines, and owners.</div>
        </div>
        <div class="card">
          <div style="font-weight:900;">Certification readiness</div>
          <div class="p">We prepare records, interviews, and checklists for the external audit.</div>
        </div>
      </div>
    </div>
  </section>

  <!-- TYPES -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:900; font-size:18px;">Audit options</div>
        <p class="p" style="margin-top:10px; max-width:940px;">
          Choose the format that fits your goal. If you’re not sure — we’ll recommend the best option.
        </p>

        <div class="grid grid-auto" style="margin-top:16px;">
          {auditTypes.map((a) => (
            <div class="card">
              <div style="display:flex; justify-content:space-between; gap:10px; align-items:flex-start;">
                <div style="font-weight:900; line-height:1.2;">{a.title}</div>
                <span class="kicker" style="white-space:nowrap;">{a.tag}</span>
              </div>
              <ul style="margin:12px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
                {a.points.map((x) => <li>{x}</li>)}
              </ul>
            </div>
          ))}
        </div>

        <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/en/contact/">Get a quotation</a>
          <a class="btn" href="/en/faq/">View FAQ</a>
        </div>
      </div>
    </div>
  </section>

  <!-- DELIVERABLES + INPUTS -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="grid grid-auto">
        <div class="card">
          <div style="font-weight:900;">What you get</div>
          <ul style="margin:12px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
            {deliverables.map((x) => <li>{x}</li>)}
          </ul>
        </div>

        <div class="card">
          <div style="font-weight:900;">What we need from you</div>
          <ul style="margin:12px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
            {inputs.map((x) => <li>{x}</li>)}
          </ul>

          <div style="margin-top:14px; border-top:1px solid var(--line); padding-top:12px;">
            <div style="font-weight:800;">Common scenario</div>
            <div class="p" style="margin-top:8px;">
              Training + readiness audit → the team understands requirements and applies them in practice.
            </div>
            <div style="margin-top:12px; display:flex; gap:12px; flex-wrap:wrap;">
              <a class="btn" href="/en/training/">View training</a>
              <a class="btn primary" href="/en/contact/">Let’s build a program</a>
            </div>
          </div>
        </div>
      </div>

      <div class="card" style="margin-top:18px;">
        <div style="font-weight:900;">Ready to start?</div>
        <p class="p" style="margin-top:10px; max-width:940px;">
          Send a request — we’ll уточнить детали and propose the right audit format.
        </p>
        <div style="margin-top:14px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/en/contact/">Request an audit</a>
          <a class="btn" href="/en/services/">All services</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
