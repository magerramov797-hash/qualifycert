---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const title = "About the company";
const desc =
  "ISO consulting: certification preparation, audits, and training. Practical approach, clear processes, measurable results.";
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker">Expertise • Practice • Results</div>

      <h1 class="h1" style="margin-top:12px;">{title}</h1>

      <p class="p" style="max-width:900px;">
        We help companies implement and maintain ISO management systems so they work in real business,
        not as “paperwork” created only to obtain a certificate.
      </p>

      <!-- 3 cards (auto grid) -->
      <div class="grid grid-auto" style="margin-top:22px;">
        <div class="card">
          <div style="font-weight:800;">What we do</div>
          <p class="p">
            ISO certification preparation, internal and pre-certification audits,
            staff training, and management system implementation.
          </p>
        </div>

        <div class="card">
          <div style="font-weight:800;">Our approach</div>
          <p class="p">
            We start with diagnostics, then tailor the system to your processes,
            train your team, and verify the results through an audit.
          </p>
        </div>

        <div class="card">
          <div style="font-weight:800;">What you gain</div>
          <p class="p">
            Clear processes, controlled risks, audit readiness,
            and stronger trust from customers and partners.
          </p>
        </div>
      </div>

      <!-- How we work -->
      <div class="card" style="margin-top:20px;">
        <div style="font-weight:800; margin-bottom:10px;">How we work</div>

        <div class="grid grid-auto about-steps">
          <div class="step">
            <div style="font-weight:700;">1) Diagnostics</div>
            <div class="p">Review of processes, risks, and standard requirements.</div>
          </div>

          <div class="step">
            <div style="font-weight:700;">2) Plan</div>
            <div class="p">Stages, timelines, responsibilities, and document list.</div>
          </div>

          <div class="step">
            <div style="font-weight:700;">3) Implementation</div>
            <div class="p">Documentation, processes, and staff training.</div>
          </div>

          <div class="step">
            <div style="font-weight:700;">4) Verification</div>
            <div class="p">Internal audit, corrective actions, readiness confirmed.</div>
          </div>
        </div>
      </div>

      <!-- Why trust -->
      <div class="card" style="margin-top:20px;">
        <div style="font-weight:800;">Why clients trust us</div>
        <ul class="p about-list">
          <li>Hands-on experience implementing ISO across different industries</li>
          <li>Focus on systems that work — not on formal paperwork</li>
          <li>Clear, simple communication without unnecessary bureaucracy</li>
          <li>Support up to full audit readiness</li>
        </ul>
      </div>

      <!-- CTA -->
      <div class="grid grid-auto" style="margin-top:18px; justify-items:center; max-width:520px;">
        <a class="btn primary" href="/en/contact/" style="width:100%;">Get a consultation</a>
        <a class="btn" href="/en/services/" style="width:100%;">Our services</a>
      </div>
    </div>
  </section>

  <style is:global>
    /* Make steps look tighter inside the card */
    .about-steps{
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 14px;
      margin-top: 10px;
    }
    .about-steps .step{
      padding: 12px;
      border: 1px dashed rgba(15,23,42,.10);
      border-radius: 14px;
      background: rgba(255,255,255,.55);
    }

    .about-list{
      margin: 10px 0 0;
      padding-left: 18px;
      display: grid;
      gap: 6px;
      color: var(--muted);
    }
  </style>
</BaseLayout>
