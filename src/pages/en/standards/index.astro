---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const title = "Standards";
const desc =
  "ISO 9001, ISO 14001, ISO 45001, ISO 22000 and HACCP: compliance, benefits, and the preparation process.";

const standards = [
  {
    title: "ISO 9001",
    tag: "Quality",
    desc: "Quality management: processes, KPIs, risks, nonconformities, and improvement.",
    href: "/en/standards/iso-9001/",
  },
  {
    title: "ISO 14001",
    tag: "Environment",
    desc: "Environmental management: aspects & impacts, compliance, objectives, and programs.",
    href: "/en/standards/iso-14001/",
  },
  {
    title: "ISO 45001",
    tag: "OH&S",
    desc: "Occupational health & safety: hazards, risk assessment, training, investigations, control.",
    href: "/en/standards/iso-45001/",
  },
  {
    title: "ISO 22000",
    tag: "Food Safety",
    desc: "Food safety: PRPs, hazard analysis, OPRPs/CCPs, risk management.",
    href: "/en/standards/iso-22000/",
  },
  {
    title: "HACCP",
    tag: "Food Safety",
    desc: "HACCP plan: CCPs, monitoring, corrective actions, records, and verification.",
    href: "/en/standards/haccp/",
  },
  {
    title: "Integrated management system",
    tag: "IMS",
    desc: "ISO 9001 + 14001 + 45001 — one documentation set and aligned processes.",
    href: "/en/services/certification/",
  },
];

const why = [
  { title: "Market trust", desc: "Stronger compliance for tenders and customer requirements." },
  { title: "Process discipline", desc: "Clear roles, procedures, and control." },
  { title: "Lower risk", desc: "Fewer incidents, losses, and defects." },
  { title: "Audit readiness", desc: "Records, evidence, and internal checks." },
];
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker">ISO • Standards</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>

      <p class="p" style="max-width:940px;">
        We help you choose the right standards for your industry and goals, prepare documentation,
        train staff, and run internal audits — so you can pass certification confidently.
      </p>

      <div style="display:flex; gap:12px; margin-top:18px; flex-wrap:wrap;">
        <a class="btn primary" href="/en/contact/">Get advice</a>
        <a class="btn" href="/en/services/">View services</a>
      </div>

      <div class="grid grid-auto" style="margin-top:22px;">
        {standards.map((s) => (
          <a class="card" href={s.href}>
            <div style="display:flex; justify-content:space-between; gap:10px; align-items:flex-start;">
              <div style="font-weight:900; line-height:1.2;">{s.title}</div>
              <span class="kicker" style="white-space:nowrap;">{s.tag}</span>
            </div>
            <p class="p" style="margin-top:10px;">{s.desc}</p>
            <div style="margin-top:14px; font-weight:700;">Learn more →</div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:900;">Why ISO matters</div>

        <div class="grid grid-auto" style="margin-top:12px;">
          {why.map((x) => (
            <div class="card">
              <div style="font-weight:800;">{x.title}</div>
              <div class="p" style="margin-top:8px;">{x.desc}</div>
            </div>
          ))}
        </div>

        <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/en/services/certification/">Certification readiness</a>
          <a class="btn" href="/en/services/audit/">Need a readiness audit</a>
          <a class="btn" href="/en/training/">Training</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
