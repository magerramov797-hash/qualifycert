---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Xidmətlər";
const desc =
  "ISO sertifikatlaşdırma, audit və təlim: diaqnostika, tətbiq, daxili audit və sertifikatlaşmaya hazırlıq.";

const services = [
  {
    title: "ISO sertifikatlaşdırma",
    desc: "ISO 9001, 14001, 45001, 22000 və HACCP üzrə hazırlıq. Tətbiq, təlim, daxili audit, sertifikatlaşmaya hazırlıq.",
    href: "/services/certification/",
    tag: "Əsas xidmət",
  },
  {
    title: "Audit",
    desc: "Gap-analiz, daxili auditlər, sertifikatöncəsi hazırıq auditi. Hesabat, uyğunsuzluqlar, CAPA planı.",
    href: "/services/audit/",
    tag: "Yoxlama və yaxşılaşdırma",
  },
  {
    title: "Təlim",
    desc: "Personal və daxili auditorlar üçün təlim: ISO tələbləri, praktika, çek-listlər, keys analizi.",
    href: "/services/training/",
    tag: "Praktika",
  },
];
---

<BaseLayout title={title} description={desc}>
  <!-- Hero -->
  <section class="section">
    <div class="container">
      <div class="kicker">ISO • Audit • Təlim</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:920px;">
        İdarəetmə sistemini elə qururuq ki, real işləsin — proseslər, məsuliyyət,
        sənədlər, təlim və daxili audit vasitəsilə yoxlama.
      </p>

      <div style="display:flex; gap:12px; margin-top:18px; flex-wrap:wrap;">
        <a class="btn primary" href="/contact/">Kommersiya təklifi alın</a>
        <a class="btn" href="/standards/">Standart seçin</a>
      </div>

      <!-- 3 карточки услуг -->
      <div class="grid" style="margin-top:22px;">
        {services.map((s) => (
          <a class="card" href={s.href} style="grid-column: span 4;">
            <div style="display:flex; justify-content:space-between; gap:12px; align-items:flex-start;">
              <div style="font-weight:800; line-height:1.2;">{s.title}</div>
              <span class="kicker" style="white-space:nowrap;">{s.tag}</span>
            </div>
            <p class="p" style="margin-top:10px;">{s.desc}</p>
            <div style="margin-top:14px; font-weight:700;">Ətraflı →</div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Как работаем -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:800; margin-bottom:10px;">Necə işləyirik</div>

        <div class="grid">
          <div style="grid-column: span 3;">
            <div style="font-weight:700;">1) Diaqnostika</div>
            <div class="p">Gap-analiz, kontekst, risklər, tələblər və proseslər.</div>
          </div>

          <div style="grid-column: span 3;">
            <div style="font-weight:700;">2) Plan</div>
            <div class="p">Mərhələlər, müddətlər, məsul şəxslər və sənədlər siyahısı.</div>
          </div>

          <div style="grid-column: span 3;">
            <div style="font-weight:700;">3) Tətbiq</div>
            <div class="p">Sənədləşmə, təlim, prosedurların və qeydlərin tətbiqi.</div>
          </div>

          <div style="grid-column: span 3;">
            <div style="font-weight:700;">4) Yoxlama</div>
            <div class="p">Daxili audit, CAPA və sertifikatlaşmaya hazırlıq.</div>
          </div>
        </div>

        <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/contact/">Plan və qiymət istəyin</a>
          <a class="btn" href="/insights/cases/">Keyslərə baxın</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Что нужно от клиента / Что получите -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="grid">
        <div class="card" style="grid-column: span 6;">
          <div style="font-weight:800;">Sizdən nələr lazımdır</div>
          <ul style="margin:10px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
            <li>Sahə və fəaliyyət növləri</li>
            <li>İşçi sayı və obyektlər</li>
            <li>Lazım olan standartlar (və ya layihə məqsədi)</li>
            <li>İstənilən müddətlər</li>
            <li>Əlaqə şəxsi</li>
          </ul>
        </div>

        <div class="card" style="grid-column: span 6;">
          <div style="font-weight:800;">Nə əldə edəcəksiniz</div>
          <ul style="margin:10px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
            <li>İş planı və yol xəritəsi</li>
            <li>Şirkətə uyğun sənədləşmə paketi</li>
            <li>Personalın təlimi</li>
            <li>Daxili audit və hesabat</li>
            <li>CAPA (düzəldici tədbirlər) və tövsiyələr</li>
          </ul>
        </div>
      </div>

      <div class="card" style="margin-top:18px;">
        <div style="font-weight:800;">Nə seçəcəyinizə əmin deyilsiniz?</div>
        <p class="p" style="margin-top:10px; max-width:900px;">
          Sahənizi və məqsədi yazın — hansı standart/xidmət uyğundur, onu dəqiqləşdirək və iş planı göndərək.
        </p>
        <div style="margin-top:14px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/contact/">Məsləhət alın</a>
          <a class="btn" href="/standards/">Standartlara baxın</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
