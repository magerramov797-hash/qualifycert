---
import BaseLayout from "../../layouts/BaseLayout.astro";

const title = "Xidmətlər";
const desc =
  "ISO sertifikatlaşdırma, audit və təlim: diaqnostika, tətbiq, daxili audit və sertifikatlaşmaya hazırlıq.";

const services = [
  {
    title: "ISO sertifikatlaşdırma",
    desc: "ISO 9001, 14001, 45001, 22000 və HACCP üzrə hazırlıq. Tətbiq, təlim, daxili audit və sertifikatlaşmaya hazırlıq.",
    href: "/services/certification/",
    tag: "Əsas xidmət",
  },
  {
    title: "Audit",
    desc: "Gap-analiz, daxili auditlər, sertifikatöncəsi hazırıq auditi. Hesabat, uyğunsuzluqlar və CAPA planı.",
    href: "/services/audit/",
    tag: "Yoxlama və yaxşılaşdırma",
  },
  {
    title: "Təlim",
    desc: "Personal və daxili auditorlar üçün təlim: ISO tələbləri, praktika, чек-listlər və real nümunələr.",
    href: "/services/training/",
    tag: "Praktika",
  },
];
---

<BaseLayout title={title} description={desc}>
  <!-- Hero -->
  <section class="section">
    <div class="container">
      <div class="kicker">Sertifikatlaşdırma • Audit • Təlim</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:920px;">
        İdarəetmə sistemlərini real və effektiv işləyən formada qururuq - prosesləri müəyyənləşdirir, 
        məsuliyyətləri aydın şəkildə təyin edir, sənədləşməni sistemləşdirir, 
        təlimləri təşkil edir və daxili audit vasitəsilə davamlılığını təmin edirik.
      </p>

      <div style="display:flex; gap:12px; margin-top:18px; flex-wrap:wrap;">
        <a class="btn primary" href="/contact/">Kommersiya təklifi alın</a>
        <a class="btn" href="/standards/">Standart seçin</a>
      </div>

      <div class="grid grid-auto" style="margin-top:22px;">
        {services.map((s) => (
          <a class="card" href={s.href}>
            <div style="display:flex; justify-content:space-between; gap:12px; align-items:flex-start;">
              <div style="font-weight:800; line-height:1.2;">{s.title}</div>
              <span class="kicker">{s.tag}</span>
            </div>
            <p class="p" style="margin-top:10px;">{s.desc}</p>
            <div style="margin-top:14px; font-weight:700;">Ətraflı →</div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- How we work -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:800; margin-bottom:10px;">Necə işləyirik</div>

        <div class="grid grid-auto">
          <div>
            <div style="font-weight:700;">1) Diaqnostika</div>
            <div class="p">Gap-analiz, risklər, tələblər və proseslərin analizi.</div>
          </div>
          <div>
            <div style="font-weight:700;">2) Plan</div>
            <div class="p">Mərhələlər, müddətlər, məsul şəxslər və sənədlər.</div>
          </div>
          <div>
            <div style="font-weight:700;">3) Tətbiq</div>
            <div class="p">Sənədləşmə, təlim və praktik tətbiq.</div>
          </div>
          <div>
            <div style="font-weight:700;">4) Yoxlama</div>
            <div class="p">Daxili audit, CAPA və sertifikatlaşmaya hazırlıq.</div>
          </div>
        </div>

        <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/contact/">Plan və qiymət istəyin</a>
        </div>
      </div>
    </div>
  </section>

  <!-- Input / Output -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="grid grid-auto">
        <div class="card">
          <div style="font-weight:800;">Sizdən nələr lazımdır</div>
          <ul class="p" style="margin-top:10px; padding-left:18px; display:grid; gap:6px;">
            <li>Sahə və fəaliyyət növləri</li>
            <li>İşçi sayı və obyektlər</li>
            <li>Lazım olan standartlar</li>
            <li>Müddətlər və məqsəd</li>
          </ul>
        </div>

        <div class="card">
          <div style="font-weight:800;">Nə əldə edəcəksiniz</div>
          <ul class="p" style="margin-top:10px; padding-left:18px; display:grid; gap:6px;">
            <li>İş planı və yol xəritəsi</li>
            <li>Sənədləşmə paketi</li>
            <li>Personalın təlimi</li>
            <li>Daxili audit və CAPA</li>
          </ul>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
