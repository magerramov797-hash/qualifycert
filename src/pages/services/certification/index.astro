---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const title = "ISO sertifikatlaşdırma";
const desc =
  "ISO 9001, ISO 14001, ISO 45001, ISO 22000 və HACCP üzrə hazırlıq: diaqnostika, tətbiq, təlim, daxili audit və sertifikatlaşmaya hazırıq.";

const standards = [
  {
    title: "ISO 9001",
    desc: "Keyfiyyət: proseslər, KPI, uyğunsuzluqların idarəsi, yaxşılaşdırma.",
  },
  {
    title: "ISO 14001",
    desc: "Ekologiya: aspektlər/təsirlər, tələblər, məqsəd və proqramlar.",
  },
  {
    title: "ISO 45001",
    desc: "Əməyin mühafizəsi: təhlükələr, risklər, təlim, araşdırma, nəzarət.",
  },
  {
    title: "ISO 22000",
    desc: "Qida təhlükəsizliyi: PRP, təhlükə analizi, OPRP/CCP.",
  },
  {
    title: "HACCP",
    desc: "HACCP planı: CCP, monitorinq, düzəldici tədbirlər, qeydlər.",
  },
  {
    title: "Inteqrə olunmuş sistem",
    desc: "ISO 9001 + 14001 + 45001 — vahid sənəd paketi və proseslər.",
  },
];
---

<BaseLayout title={title} description={desc}>
  <!-- HERO -->
  <section class="section">
    <div class="container">
      <div class="kicker">Xidmətlər</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:920px;">
        Şirkəti sertifikatlaşmaya real hazırlayırıq: plan, sənədləşmə, təlim, daxili audit və xarici qiymətləndirməyə hazırıq.
      </p>

      <div style="display:flex; gap:12px; margin-top:18px; flex-wrap:wrap;">
        <a class="btn primary" href="/contact/">Qiymət istəyin</a>
        <a class="btn" href="/standards/">Standart seçin</a>
      </div>

      <div class="grid grid-auto" style="margin-top:22px;">
        {standards.map((s) => (
          <div class="card">
            <div style="font-weight:800;">{s.title}</div>
            <div class="p">{s.desc}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- PROCESS -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:800; margin-bottom:10px;">İş necə gedir</div>

        <div class="grid grid-auto">
          <div>
            <div style="font-weight:700;">1) Diaqnostika</div>
            <div class="p">Gap-analiz, kontekst, proseslər, risklər, tələblər.</div>
          </div>
          <div>
            <div style="font-weight:700;">2) Plan</div>
            <div class="p">Müddətlər, məsuliyyət, sənədlər və fəaliyyət siyahısı.</div>
          </div>
          <div>
            <div style="font-weight:700;">3) Tətbiq</div>
            <div class="p">Siyasətlər, prosedurlar, qeydlər, personalın təlimi.</div>
          </div>
          <div>
            <div style="font-weight:700;">4) Yoxlama</div>
            <div class="p">Daxili audit, CAPA, sertifikatlaşmaya hazırıq.</div>
          </div>
        </div>

        <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/contact/">Plan və qiymət alın</a>
          <a class="btn" href="/services/audit/">Hazırlıq auditi lazımdır</a>
        </div>
      </div>
    </div>
  </section>

  <!-- INCLUDED / INPUTS -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="grid grid-auto">
        <div class="card">
          <div style="font-weight:800;">Nə daxildir</div>
          <ul class="p" style="margin:10px 0 0; padding-left:18px; display:grid; gap:6px;">
            <li>Layihə planı və iş təqvimi</li>
            <li>Şirkətə uyğun sənədlər paketi</li>
            <li>Personal və məsul şəxslər üçün təlim</li>
            <li>Daxili auditin keçirilməsi</li>
            <li>CAPA üzrə tədbirlər planı</li>
          </ul>
        </div>

        <div class="card">
          <div style="font-weight:800;">Hansı məlumatlar lazımdır</div>
          <ul class="p" style="margin:10px 0 0; padding-left:18px; display:grid; gap:6px;">
            <li>Sahə və fəaliyyət növləri</li>
            <li>İşçi və obyekt sayı</li>
            <li>Mövcud proseslər/sənədlər (əgər varsa)</li>
            <li>İstənilən müddətlər və standartlar</li>
            <li>Əlaqə şəxsi</li>
          </ul>
        </div>
      </div>

      <div class="card" style="margin-top:18px;">
        <div style="font-weight:800;">Başlamağa hazırsınız?</div>
        <p class="p" style="margin-top:10px; max-width:900px;">
          Sorğu göndərin — detalları dəqiqləşdirib iş planı və qiyməti paylaşaq.
        </p>
        <div style="margin-top:14px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/contact/">Sorğu göndər</a>
          <a class="btn" href="/services/">Bütün xidmətlər</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
