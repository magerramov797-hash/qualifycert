---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const title = "Təlim";
const desc =
  "ISO üzrə təlim: rəhbərlik, məsul şəxslər və daxili auditorlar üçün proqramlar, modullar və nəticələr.";

const programs = [
  {
    title: "ISO Awareness (personal üçün)",
    tag: "1–2 saat",
    forWho: "Əməkdaşlar / ofis / istehsalat",
    points: [
      "ISO nədir və niyə lazımdır",
      "Sistemdə əməkdaşın rolu (proseslər, qeydlər, intizam)",
      "Auditdə tipik səhvlər",
      "Audit üçün mini çek-list",
    ],
  },
  {
    title: "ISO Implementation (sistemə cavabdehlər üçün)",
    tag: "1–2 gün",
    forWho: "ISO üzrə məsul şəxslər / keyfiyyət menecerləri / HSE",
    points: [
      "Kontekst, maraqlı tərəflər, risklər və məqsədlər",
      "Proseslər və KPI, sənədləşmə və qeydlər",
      "Uyğunsuzluqların idarəsi, CAPA və yaxşılaşdırma",
      "Sertifikatlaşmaya hazırlıq: plan, nəzarət, sübutlar",
    ],
  },
  {
    title: "Internal Auditor (daxili auditor)",
    tag: "2 gün",
    forWho: "Daxili auditorlar / bölmə rəhbərləri",
    points: [
      "Audit prinsipləri, planlaşdırma və çek-listlər",
      "Müsahibə və sübutların toplanması",
      "Uyğunsuzluqların təsnifatı və hesabat",
      "CAPA və effektivlik yoxlaması",
    ],
  },
];

const formats = [
  { title: "Əyani", desc: "Sahədə keçirilir, proses və risklərə uyğunlaşdırılır." },
  { title: "Onlayn", desc: "Zoom/Teams — paylanmış komandalar üçün rahatdır." },
  { title: "Qarışıq", desc: "Nəzəriyyə onlayn + praktik/audit yerində." },
  { title: "Fərdi", desc: "Rəhbərlik və ya məsul şəxs üçün qısa və dəqiq format." },
];

const whatYouGet = [
  "Sahə və standart üzrə təlim proqramı",
  "Materiallar: təqdimatlar, şablonlar, sənəd nümunələri",
  "Çek-listlər (audit/özünü yoxlama/sertifikatlaşma hazırlığı)",
  "Praktik keys və səhvlərin analizi",
  "Tətbiq və növbəti addımlar üçün tövsiyələr",
];
---

<BaseLayout title={title} description={desc}>
  <!-- HERO -->
  <section class="section">
    <div class="container">
      <div class="kicker">Training • ISO</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:940px;">
        ISO üzrə praktik təlimlər keçiririk: personal, sistemə cavabdehlər və daxili auditorlar üçün.
        Sadə və faydalı formatda: nümunələr, çek-listlər, keys və real situasiyalar.
      </p>

      <div style="display:flex; gap:12px; margin-top:18px; flex-wrap:wrap;">
        <a class="btn primary" href="/contact/">Proqram və qiymət istəyin</a>
        <a class="btn" href="/services/certification/">ISO tətbiqi lazımdır</a>
      </div>

      <div class="grid" style="margin-top:22px;">
        <div class="card" style="grid-column: span 4;">
          <div style="font-weight:900;">Aydın nəticə</div>
          <div class="p">Təlimdən sonra komanda tələbləri və rolunu anlayır. Auditdə az səhv.</div>
        </div>
        <div class="card" style="grid-column: span 4;">
          <div style="font-weight:900;">Praktika</div>
          <div class="p">Çek-listlər, müsahibə ssenariləri, uyğunsuzluq nümunələri və CAPA.</div>
        </div>
        <div class="card" style="grid-column: span 4;">
          <div style="font-weight:900;">Sahəyə uyğun</div>
          <div class="p">Materialları prosesinizə uyğunlaşdırırıq: istehsalat, tikinti, qida, xidmətlər.</div>
        </div>
      </div>
    </div>
  </section>

  <!-- PROGRAMS -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:900; font-size:18px;">Təlim proqramları</div>
        <p class="p" style="margin-top:10px; max-width:940px;">
          Rolunuza uyğun format seçin. Lazım olsa, standartınıza uyğun kombinə proqram hazırlayırıq.
        </p>

        <div class="grid" style="margin-top:16px;">
          {programs.map((p) => (
            <div class="card" style="grid-column: span 4;">
              <div style="display:flex; justify-content:space-between; gap:10px; align-items:flex-start;">
                <div style="font-weight:900; line-height:1.2;">{p.title}</div>
                <span class="kicker" style="white-space:nowrap;">{p.tag}</span>
              </div>
              <div class="p" style="margin-top:8px;">Kimlər üçün: {p.forWho}</div>
              <ul style="margin:10px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
                {p.points.map((x) => <li>{x}</li>)}
              </ul>
            </div>
          ))}
        </div>

        <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/contact/">Proqram (PDF) və qiymət alın</a>
          <a class="btn" href="/faq/">FAQ baxın</a>
        </div>
      </div>
    </div>
  </section>

  <!-- FORMATS -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="grid">
        <div class="card" style="grid-column: span 6;">
          <div style="font-weight:900;">Formatlar</div>
          <div class="grid" style="margin-top:12px;">
            {formats.map((f) => (
              <div class="card" style="grid-column: span 6;">
                <div style="font-weight:800;">{f.title}</div>
                <div class="p" style="margin-top:8px;">{f.desc}</div>
              </div>
            ))}
          </div>
        </div>

        <div class="card" style="grid-column: span 6;">
          <div style="font-weight:900;">Nə əldə edirsiniz</div>
          <ul style="margin:12px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
            {whatYouGet.map((x) => <li>{x}</li>)}
          </ul>

          <div style="margin-top:14px; border-top:1px solid var(--line); padding-top:12px;">
            <div style="font-weight:800;">Sürətli hesablamа</div>
            <div class="p" style="margin-top:8px;">
              Qiymət üçün: mövzu/standart, iştirakçı sayı, format (oflayn/online) və tarixlər lazımdır.
            </div>
            <div style="margin-top:12px;">
              <a class="btn primary" href="/contact/">Qiymət istəyin</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:900;">Təlim + hazırıq auditi istəyirsiniz?</div>
        <p class="p" style="margin-top:10px; max-width:940px;">
          Tez-tez ən yaxşı format — qısa təlim + daxili audit. Komanda bilikləri praktikada möhkəmləndirir.
        </p>
        <div style="margin-top:14px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/contact/">Proqramı bizə uyğunlaşdırın</a>
          <a class="btn" href="/services/audit/">Auditə baxın</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>

