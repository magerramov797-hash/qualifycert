---
import BaseLayout from "../../../layouts/BaseLayout.astro";

const title = "Audit";
const desc =
  "ISO üzrə daxili auditlər, gap-analiz və sertifikatöncəsi hazırıq auditi: hesabat, uyğunsuzluqlar, CAPA və yaxşılaşdırma planı.";

const auditTypes = [
  {
    title: "Gap-analiz (Audit Readiness)",
    tag: "1–3 gün",
    points: [
      "Mövcud vəziyyətin ISO tələbləri ilə müqayisəsi",
      "Uyğunsuzluqlar və risklərin siyahısı",
      "Boşluqların bağlanması üçün iş planı",
      "Prioritetlər və sürətli yaxşılaşdırmalar",
    ],
  },
  {
    title: "ISO daxili audit",
    tag: "plan üzrə",
    points: [
      "Audit planı və proqramı",
      "Müsahibələr, qeydlərin seçməsi, müşahidələr",
      "Sübutlu audit hesabatı",
      "Uyğunsuzluqlar/nəticələr + CAPA",
    ],
  },
  {
    title: "Sertifikatöncəsi audit",
    tag: "xarici auditdən əvvəl",
    points: [
      "Hazırıq səviyyəsinin 80–90% yoxlanması",
      "Qeydlər və tətbiq praktikası",
      "Personalın müsahibəyə hazırlanması",
      "Yekun hazırıq çek-listi",
    ],
  },
];

const deliverables = [
  "Audit hesabatı (strukturlaşdırılmış və aydın)",
  "Uyğunsuzluqlar və müşahidələr siyahısı",
  "CAPA planı (məsul şəxslər və müddətlər)",
  "Yaxşılaşdırma üzrə tövsiyələr",
  "Lazım olduqda — şablonlar/çek-listlər",
];

const inputs = [
  "Hansı standart(lar): ISO 9001 / 14001 / 45001 / 22000 / HACCP",
  "Sahə və proseslər (qısa)",
  "Obyekt/ərazi sayı",
  "İşçi sayı (təxmini)",
  "İstənilən müddət və format (oflayn/online)",
];
---

<BaseLayout title={title} description={desc}>
  <!-- HERO -->
  <section class="section">
    <div class="container">
      <div class="kicker">Audit • ISO</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:940px;">
        Audit real vəziyyəti göstərir: nə işləyir, nə işləmir və sertifikatlaşmaya nə mane olur.
        Biz “tənqid üçün tənqid” yox, aydın fəaliyyət planı veririk: uyğunsuzluqlar, risklər, CAPA və prioritetlər.
      </p>

      <div style="display:flex; gap:12px; margin-top:18px; flex-wrap:wrap;">
        <a class="btn primary" href="/contact/">Audit sifariş edin</a>
        <a class="btn" href="/services/certification/">ISO tətbiqi lazımdır</a>
      </div>

      <div class="grid" style="margin-top:22px;">
        <div class="card" style="grid-column: span 4;">
          <div style="font-weight:900;">Aydın hesabat</div>
          <div class="p">Faktlar, sübutlar, uyğunsuzluqlar və tövsiyələr — qısa və dəqiq.</div>
        </div>
        <div class="card" style="grid-column: span 4;">
          <div style="font-weight:900;">CAPA planı</div>
          <div class="p">Konkret addımlar, müddətlər və məsul şəxslər.</div>
        </div>
        <div class="card" style="grid-column: span 4;">
          <div style="font-weight:900;">Auditə hazırıq</div>
          <div class="p">Xarici audit üçün qeydlər, müsahibələr və чек-листlər hazırlayırıq.</div>
        </div>
      </div>
    </div>
  </section>

  <!-- TYPES -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="card">
        <div style="font-weight:900; font-size:18px;">Audit növləri</div>
        <p class="p" style="margin-top:10px; max-width:940px;">
          Tapşırığınıza uyğun formatı seçin. Əmin deyilsinizsə, biz məsləhət verəcəyik.
        </p>

        <div class="grid" style="margin-top:16px;">
          {auditTypes.map((a) => (
            <div class="card" style="grid-column: span 4;">
              <div style="display:flex; justify-content:space-between; gap:10px; align-items:flex-start;">
                <div style="font-weight:900; line-height:1.2;">{a.title}</div>
                <span class="kicker" style="white-space:nowrap;">{a.tag}</span>
              </div>
              <ul style="margin:12px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
                {a.points.map((x) => <li>{x}</li>)}
              </ul>
            </div>
          ))}
        </div>

        <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/contact/">Təklif alın</a>
          <a class="btn" href="/faq/">FAQ baxın</a>
        </div>
      </div>
    </div>
  </section>

  <!-- DELIVERABLES + INPUTS -->
  <section class="section" style="padding-top:0;">
    <div class="container">
      <div class="grid">
        <div class="card" style="grid-column: span 6;">
          <div style="font-weight:900;">Nə əldə edirsiniz</div>
          <ul style="margin:12px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
            {deliverables.map((x) => <li>{x}</li>)}
          </ul>
        </div>

        <div class="card" style="grid-column: span 6;">
          <div style="font-weight:900;">Sizdən nələr lazımdır</div>
          <ul style="margin:12px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
            {inputs.map((x) => <li>{x}</li>)}
          </ul>

          <div style="margin-top:14px; border-top:1px solid var(--line); padding-top:12px;">
            <div style="font-weight:800;">Tez-tez ssenari</div>
            <div class="p" style="margin-top:8px;">
              Təlim + hazırıq auditi → komanda tələbləri anlayır və praktiki tətbiq edir.
            </div>
            <div style="margin-top:12px; display:flex; gap:12px; flex-wrap:wrap;">
              <a class="btn" href="/training/">Təlimə baxın</a>
              <a class="btn primary" href="/contact/">Proqram hazırlayaq</a>
            </div>
          </div>
        </div>
      </div>

      <div class="card" style="margin-top:18px;">
        <div style="font-weight:900;">Başlamağa hazırsınız?</div>
        <p class="p" style="margin-top:10px; max-width:940px;">
          Sorğu göndərin — detalları dəqiqləşdirib audit formatını təklif edək.
        </p>
        <div style="margin-top:14px; display:flex; gap:12px; flex-wrap:wrap;">
          <a class="btn primary" href="/contact/">Audit sifariş edin</a>
          <a class="btn" href="/services/">Bütün xidmətlər</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
