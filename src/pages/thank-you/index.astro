---
import BaseLayout from "../../layouts/BaseLayout.astro";
const title = "Sorğu qəbul olundu";
const desc = "Müraciətiniz üçün təşəkkürlər. Tezliklə sizinlə əlaqə saxlayacağıq.";
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker">Təşəkkürlər</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:780px;">
        Sorğunuzu aldıq və ən qısa zamanda geri dönüş edəcəyik.
      </p>

      <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
        <a class="btn primary" href="/services/">Xidmətlərə baxın</a>
        <a class="btn" href="/contact/">Bizimlə əlaqə</a>
      </div>
    </div>
  </section>
</BaseLayout>
