---
import BaseLayout from "../layouts/BaseLayout.astro";
const title = "Sorğu qəbul olundu";
const desc = "Müraciətiniz üçün təşəkkürlər. Tezliklə sizinlə əlaqə saxlayacağıq.";
---

<BaseLayout title={title} description={desc}>
  <section class="section">
    <div class="container">
      <div class="kicker">Təşəkkürlər</div>
      <h1 class="h1" style="margin-top:12px;">{title}</h1>
      <p class="p" style="max-width:780px;">
        Sorğunuzu aldıq. 1 iş günü ərzində sizinlə əlaqə saxlayacaq, iş planı və qiyməti paylaşacağıq.
      </p>

      <ul style="margin:10px 0 0; padding-left:18px; color: var(--muted); display:grid; gap:6px;">
        <li>Standart və xidmətlər üzrə detalları dəqiqləşdirəcəyik</li>
        <li>İlkin plan və müddətləri təklif edəcəyik</li>
        <li>Layihə komandası və növbəti addımlar haqqında məlumat verəcəyik</li>
      </ul>

      <div style="margin-top:16px; display:flex; gap:12px; flex-wrap:wrap;">
        <a class="btn primary" href="/services/">Xidmətlərə baxın</a>
        <a class="btn" href="/insights/">Materialları oxuyun</a>
        <a class="btn" href="/">Əsas səhifə</a>
      </div>
    </div>
  </section>
</BaseLayout>
