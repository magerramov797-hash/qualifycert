    <nav style="display:flex; gap:14px; align-items:center;">
      <a href="/services/" style="color:rgba(255,255,255,.78)">Услуги</a>
      <a href="/standards/iso-9001/" style="color:rgba(255,255,255,.78)">Стандарты</a>
      <a href="/training/" style="color:rgba(255,255,255,.78)">Обучение</a>
